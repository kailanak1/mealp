<!DOCTYPE html>
<html>
  <head>
    <title>Mealp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header class='navbar'>
  <div class="top-nav">
   
      <%= link_to "Mealp", posts_path %>
      <%= link_to "My Profile", current_user%>
      <%= link_to "New Post", new_post_path %>
      <%= link_to "Logout", logout_path %>
      <p><%= form_tag(search_results_path,   
    class: 'navbar-form navbar-left') do %>  
  <div class="input-group">  
    <%= search_field_tag :search, params[:search], placeholder: "Search Tags", class: "form-control" %>   </p>
    </div>  
  </div>  
<% end %>
    
  </div>
</header>

 

    <div class='content'>
    <%= yield %>
    </div>
  </body>
</html>
