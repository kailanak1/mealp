 <div style ="text-align:left;">
<%@posts.reverse.each do |post|%>
<b><%=link_to post.title, post_path(post)%></b>
<%if post.pic.attached?%>
<p><img src = "<%=url_for(post.pic)%>"></p>
<%end%>
<p><%= truncate(post.summary, length: 50) %></p>
<p><small><%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></small></p>
<%end%>
</div>