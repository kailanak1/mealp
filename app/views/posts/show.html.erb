POSTS SHOW

<h1><%=@post.title%></h1>

<%=@post.pic%>

<p> <%=@post.summary%> </p>


<%=@post.all_tags%>

<ul>
<li><%=@post.category%></li>
<li><%=link_to @post.user.name, user_path(@post.user_id)%></li>
<%if current_user == @post.user%>
<li><%=link_to "Edit", edit_post_path(@post)%></li>
<%end%>
</ul>



<br>
<br>
<br>
<br>
<br>
<br>
<%if current_user == @post.user%>
<%=button_to "Delete this Post", @post, method: :delete%>
<%end%>